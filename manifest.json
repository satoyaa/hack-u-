{
  "manifest_version": 3,
  "name": "PDF カラーフルカスタマイザー",
  "version": "3.0",
  "description": "PDFのテキストをカラフル＆大文字に変換します。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "viewer/*", "lib/*" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
