{
  "manifest_version": 3,
  "name": "PDF カラーフルカスタマイザー",
  "version": "1.2",
  "description": "PDFのテキストをカラフル＆大文字に変換します。",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "viewer/*" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}