{
  "manifest_version": 3,
  "name": "PDF Inverter",
  "version": "1.0",
  "description": "Opens PDF files in a viewer with an invert function.",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "web/viewer.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}